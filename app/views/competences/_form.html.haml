= form_for @competence do |f|
  - if @competence.errors.any?
    #error_explanation
      %h2= "#{pluralize(@competence.errors.count, "error")} prohibited this competence from being saved:"
      %ul
        - @competence.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :competence_type_id
    = f.number_field :competence_type_id
  .actions
    = f.submit 'Save'
