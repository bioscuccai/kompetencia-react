!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Komp
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = import_bundle
    = csrf_meta_tags
  %body
    .container
      .row
        .column.column-25
          -if user_signed_in?
            %div
              %strong
                =current_user.email
            %div
              =link_to 'Profilom', user_path(current_user)
            %div
              =link_to 'Kijelentkezés', destroy_user_session_path, method: :delete
          -else
            %div
              =link_to 'Bejelentkezés', new_user_session_path
            %div
              =link_to 'Regisztráció', new_user_registration_path
          %ul
            %li
              =link_to 'Kompetenciák', competence_types_path
            %li
              =link_to 'Válaszlehetőségek', competence_tier_groups_path
            %li
              =link_to 'Felhasználók', users_path
            %li
              =link_to 'Kereső', query_path
            -if user_signed_in?
              %li
                =link_to 'Hírdetések', user_person_requests_path(current_user)
              %li
                =link_to 'Dolgozók', subordinates_user_path(current_user)

        .column.column-75
          = yield
