= form_for [@user, @person_request] do |f|
  - if @person_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person_request.errors.count, "error")} prohibited this person_request from being saved:"
      %ul
        - @person_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :target_id
    = f.number_field :target_id
  .field
    = f.label :starts_at
    = f.datetime_select :starts_at
  .field
    = f.label :ends_at
    = f.datetime_select :ends_at
  .field
    = f.label :chance
    = f.number_field :chance
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
