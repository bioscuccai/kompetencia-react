= form_for [@user, @availability] do |f|
  - if @availability.errors.any?
    #error_explanation
      %h2= "#{pluralize(@availability.errors.count, "error")} prohibited this availability from being saved:"
      %ul
        - @availability.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :starts_at
    = f.datetime_select :starts_at
  .field
    = f.label :ends_at
    = f.datetime_select :ends_at
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
