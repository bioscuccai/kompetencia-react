= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short_text
    = f.text_area :short_text
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :front_page
    = f.check_box :front_page
  .field
    = f.label :important
    = f.check_box :important
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
